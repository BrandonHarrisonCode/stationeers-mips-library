define TicksLightPerDay 1500 # 12.5 min * 60 sec/min * 2 ticks/sec
define TicksPerDay 2400 # 20 min * 60 sec/min * 2 ticks/sec

define GrowLights HASH("StructureGrowLight")
define TicksPerSecond 2

alias SetPower r15
alias CurrentTick r14

start:
	l CurrentTick db Setting
	mod CurrentTick CurrentTick TicksPerDay # Wrap around every day
	slt SetPower CurrentTick TicksLightPerDay
	sb GrowLights On SetPower
	add CurrentTick CurrentTick 1
	s db Setting CurrentTick
	yield
j start